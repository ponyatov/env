%{
#include "hpp.hpp"
%}
%option noyywrap yylineno

NUMB	([0-9]+)|([0-9]*\.[0-9]+)
%%
#[^\n]*			{} /* comment */
^\.end			{yyterminate();}

{NUMB}			{ yylval.d = atof(yytext); return NUM; }
[a-zA-Z0-9_]+	{ yylval.s = new string(yytext); return SYM; }
[ \t\r]			{}	/* drop spaces */

"?="			{ return TEST; }

[()+\-*/]		{ return yytext[0]; }

\n				{ return yytext[0]; }

.				{ yyerror("lexer"); }

